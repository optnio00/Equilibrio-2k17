<resources>

    <!-- Base application theme. -->


    <style name="QTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/q_green</item>
        <item name="android:colorBackground">@color/q_green</item>
        <item name="android:textViewStyle">@style/QText</item>
    </style>

    <color name="q_green">#008000</color>
    <color name="white">#FFFFFF</color>

    <style name="QText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Fragment">
        <item name="android:padding">10dp</item>
    </style>
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#673AB7</item>
        <item name="colorButtonNormal">#EC407A</item>
    </style>
    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Text Styles -->
    <style name="Text">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadingText" parent="Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ParagraphText" parent="Text">
        <item name="android:textSize">17sp</item>

        <item name="android:textColor">#000000</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SummaryText" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SummaryTitle" parent="HeadingText">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="DetailsSmallTitle" parent="HeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ListText" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <!-- Layout styles -->
    <style name="Image">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="SummaryImage" parent="Image">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DetailsImage" parent="Image">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="DetailsImage1" parent="Image">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#e44f4f</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#673AB7</item>
    </style>

    <style name="container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">#673AB7</item>
    </style>
</resources>
