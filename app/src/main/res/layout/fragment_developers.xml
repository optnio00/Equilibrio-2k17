<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/Fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/container"
        android:onClick="fblink"
        android:tag="100000708895738">

        <ImageView
            android:src="@drawable/anur_ag"
            style="@style/SummaryImage"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:text="ANURAG PATEL"
                style="@style/SummaryTitle"

                android:autoText="false" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/container"
        android:onClick="fblink"
        android:tag="100000557472181">

        <ImageView
            android:src="@drawable/shub_ham"
            style="@style/SummaryImage"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:text="SHUBHAM PANDEY"
                style="@style/SummaryTitle"

                android:autoText="false" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/HorizontalDivider"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#e44f4f"
        style="@style/Text"
        android:text="Rate us...."/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/container"
        android:onClick="launchMarket"
        android:tag="com.tricktekno.equifest.equifest">

        <ImageView
            android:src="@drawable/market"
            style="@style/SummaryImage"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate on Google Play"
                style="@style/SummaryTitle"
                android:textColor="@color/textColorPrimary"

                android:autoText="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Reviews and Ratings."
                android:textColor="@color/textColorPrimary"
                style="@style/SummaryText"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>